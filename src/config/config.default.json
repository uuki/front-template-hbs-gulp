{
  "devMode": true,
  "dist": "../dist/static",
  "public": "../www/html",
  "assets": "/assets",
  "output": {
    "img": "/assets/img",
    "js": "/assets/js",
    "css": "/assets/css",
    "font": "/assets/fonts"
  },
  "src": {
    "hbs": "./template",
    "img": "./assets/img",
    "scss": "./assets/scss",
    "js": "./assets/js"
  },
  "gulp": {
    "tasks": "./gulp/tasks",
    "utils": "./gulp/utils",
    "languages": "./gulp/languages"
  },
  "port": 6002,
  "uses": {
    "assemble"        : "COMMENT: 静的サイト構築用モジュール",
    "assemble"        : true,
    "assemble_i18n"   : "COMMENT: 静的サイト構築用モジュール（多言語対応版）",
    "assemble_i18n"   : false,
    "browserify"      : "COMMENT: --",
    "browserify"      : false,
    "browser_sync"    : "COMMENT: --",
    "browser_sync"    : true,
    "compress"        : "COMMENT: css, jsをgzip化するモジュールします",
    "compress"        : false,
    "imagemin"        : "COMMENT: src内のimgを圧縮します。jpg, png, gif, svgに対応",
    "imagemin"        : false,
    "sass"            : "COMMENT: --",
    "sass"            : false,
    "sass_globbing"   : "COMMENT: scssをフォルダ単位でグルーピングします",
    "sass_globbing"   : true,
    "spread2json"     : "COMMENT: スプレッドシートをjson形式でダウンロードします",
    "spread2json"     : false,
    "sprite_smith"    : "COMMENT: --",
    "sprite_smith"    : true
  }
}
